<Window
    x:Class="EmulatorLauncher.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EmulatorLauncher.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Emulator Launcher"
    Width="900"
    Height="600"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Emulatorliste  -->
        <ScrollViewer Margin="10" VerticalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding Emulators}" SelectedItem="{Binding SelectedEmulator}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                <TextBlock FontStyle="Italic" Text="{Binding Platform}" />
                            </StackPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <!--  Spieleliste  -->
        <ScrollViewer
            Grid.Column="1"
            Margin="10"
            VerticalScrollBarVisibility="Auto">
            <ListBox
                ItemsSource="{Binding Games}"
                MouseDoubleClick="GameListBox_DoubleClick"
                SelectedItem="{Binding SelectedGame}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                                <TextBlock FontStyle="Italic" Text="{Binding Platform}" />
                            </StackPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <!--  Admin öffnen (Zahnrad)  -->
        <Button
            Width="40"
            Height="40"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="OpenAdmin_Click"
            Content="⚙"
            FontSize="18"
            ToolTip="Admin öffnen" />
    </Grid>
</Window>
